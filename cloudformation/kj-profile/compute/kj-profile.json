{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Entry Point for the Puppet Stack.",
    "Parameters": {
        "KeyPairName": {
            "Description": "Public/private key pair",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "SubnetCIDR": {
            "Description": "CIDR block for the public subnet",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9]+\\..+"
        },
        "SubnetCIDR2": {
            "Description": "CIDR block for the public subnet",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9]+\\..+"
        },
        "RemoteAdminCIDR": {
            "Description": "CIDR block or IP for SSH access Note: a value of 0.0.0.0/0 will allow access from ANY ip address",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9]+\\..+"
        },
        "VPCCIDR": {
            "Description": "CIDR block for the VPC",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9]+\\..+"
        },
        "PuppetMasterIP": {
            "Description": "IP for the Puppet master",
            "Type": "String",
        },
        "DockerImageURL": {
            "Description": "IP for the Puppet master",
            "Type": "String"
        },
        "BucketName": {
            "Type": "String",
            "AllowedPattern": "^[0-9a-zA-Z]+([0-9a-zA-Z-]*[0-9a-zA-Z])*$",
            "Description": "S3 bucket name."
        },
        "KeyPrefix": {
            "Type": "String",
            "AllowedPattern": "^[0-9a-zA-Z-/]*$",
            "Description": "S3 key prefix."
        }
    },
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "Security Configuration"
                    },
                    "Parameters": [
                        "KeyPairName",
                        "RemoteAdminCIDR"
                    ]
                },
                {
                    "Label": {
                        "default": "AWS Quick Start Configuration"
                    },
                    "Parameters": [
                        "BucketName",
                        "KeyPrefix"
                    ]
                },
                {
                    "Label": {
                        "default": "Network Configuration"
                    },
                    "Parameters": [
                        "VPCCIDR",
                        "SubnetCIDR",
                        "SubnetCIDR2",
                        "PuppetMasterIP"
                    ]
                }
            ],
            "ParameterLabels": {
                "KeyPairName": {
                    "default": "Select a key pair:"
                },
                "RemoteAdminCIDR": {
                    "default": "Source IP for remote access (e.g., 1.1.1.1/32):"
                },
                "VPCCIDR": {
                    "default": "CIDR range for your VPC:"
                },
                "SubnetCIDR": {
                    "default": "CIDR range for the subnet in your VPC:"
                },
                "SubnetCIDR2": {
                    "default": "CIDR range for the subnet in your VPC:"
                },
                "PuppetMasterIP": {
                    "default": "IP address for the Puppet master:"
                },
                "BucketName": {
                    "default": "Quick Start S3 Bucket Name:"
                },
                "KeyPrefix": {
                    "default": "Quick Start S3 Key Prefix:"
                }
            }
        }
    },
    "Resources": {
        "VPCStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Sub": "https://s3.amazonaws.com/${BucketName}/cf-templates/network/vpc-stack.json"
                },
                "Parameters": {
                    "SubnetCIDR": {
                        "Ref": "SubnetCIDR"
                    },
                    "SubnetCIDR2": {
                        "Ref": "SubnetCIDR2"
                    },
                    "VPCCIDR": {
                        "Ref": "VPCCIDR"
                    },
                    "PuppetMasterIP": {
                        "Ref": "PuppetMasterIP"
                    }
                }
            }
        },
        "PuppetServer": {
            "Type": "AWS::CloudFormation::Stack",
            "DependsOn": "VPCStack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Sub": "https://s3.amazonaws.com/${BucketName}/${KeyPrefix}/puppet-master.json"
                },
                "Parameters": {
                    "KeyPairName": {
                        "Ref": "KeyPairName"
                    },
                    "SubnetId": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.SubnetId1"
                        ]
                    },
                    "VPC": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.VPC"
                        ]
                    },
                    "VPCCIDR": {
                        "Ref": "VPCCIDR"
                    },
                    "PuppetMasterIP": {
                        "Ref": "PuppetMasterIP"
                    },
                    "RemoteAdminCIDR": {
                        "Ref": "RemoteAdminCIDR"
                    },
                    "BucketName": {
                        "Ref": "BucketName"
                    },
                    "KeyPrefix": {
                        "Ref": "KeyPrefix"
                    }
                }
            }
        },
        "KJProfile": {
            "Type": "AWS::CloudFormation::Stack",
            "DependsOn": "PuppetServer",
            "Properties": {
                "TemplateURL": {
                    "Fn::Sub": "https://s3.amazonaws.com/${BucketName}/compute/ecs-asg.json"
                },
                "Parameters": {
                    "KeyPairName": {
                        "Ref": "KeyPairName"
                    },
                    "VpcId": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.VPC"
                        ]
                    },
                    "HostedZoneId": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.HostedZoneID"
                        ]
                    },
                    "PuppetMasterIP": {
                        "Ref": "PuppetMasterIP"
                    },
                    "DockerImageURL": {
                        "Ref": "DockerImageURL"
                    },
                    "SubnetIDs": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.SubnetIds"
                        ]
                    },
                    "DesiredCapacity": 1,
                    "MaxSize": 1,
                    "InstanceType": "t2.micro"
                }
            }
        }
    }
}